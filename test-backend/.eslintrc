{
  "parser": "babel-eslint",
  "plugins": [
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "no-undef": "error",
    "indent": ["error", 2],
    "no-extra-semi": "error",
    "object-curly-spacing": ["error", "always"],
    "prefer-const": "error",
    "quote-props": "off",
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-trailing-spaces": "error",
    "eol-last": "error",
  }
}
